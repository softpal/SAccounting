    <div class="page-content">
        <!-- BEGIN PAGE CONTAINER-->
        <div class="container-fluid">
            <!-- BEGIN PAGE HEADER-->
            <div class="row-fluid">
                <div class="span12">

                    <!-- BEGIN PAGE TITLE & BREADCRUMB-->

                    <ul class="breadcrumb margin-top-20">
                    <li><i class="icon-home"></i><a href="#">Home</a> <i class="icon-angle-right"></i></li>
                    <li><a href="#">Transactions</a></li>
                    <li><a href="#"><i class="icon-angle-right"></i>Invoices</a></li>
                    </ul>
                    <!-- END PAGE TITLE & BREADCRUMB-->
                </div>
            </div>
            <!-- END PAGE HEADER-->
            <!-- BEGIN PAGE CONTENT-->
            <div class="row-fluid">
                <div class="span12">
                    <!-- BEGIN EXAMPLE TABLE PORTLET-->
                    <div class="portlet box blue border-topf">
                        <div class="portlet-body">
                            <h3 class="page-title matop border-btoom">Payments&nbsp;<a href="~/Invoices/Payments"><i class="icon-plus-sign"></i></a></h3>
                            <!-- BEGIN FORM-->
                        <div class="row-fluid">
                            <!--BEGIN TABS-->
                            <div class="span12">
                                <div class="btn-group margin-bottom-10">
                                    <a href="~/Invoices/Index">
                                        <button class="btn blue form-border">Invoices</button>
                                    </a><a href="~/Invoices/GetPayments">
                                        <button class="btn blue form-border active">Payments</button>
                                    </a><a href="~/Invoices/GetSalesReceipts">
                                        <button class="btn blue form-border">Sales Receipts</button>
                                    </a>
                                    <div class="invoice-clear-both1"></div>
                                    <a href="#">
                                        <button class="btn blue form-border">Credit Memo</button>
                                    </a><a href="#">
                                        <button class="btn blue form-border">Delayed Charge</button>
                                    </a>
                                </div>
                                <!--BEGIN TABS-->
                                <div class="portlet-body payment-display-block">

                                    <table class="table table-striped table-bordered table-hover table-full-width" id="sample_2">
                                        <thead>
                                        <tr class="b1">
                                            <tr class="b1">
                                            <th class="hidden-480">S.No</th>
                                            <th class="journal-padding-bootom">Date</th>
                                                <th class="journal-padding-bootom">Amount</th>
                                            <th class="numeric journal-padding-bootom">Paid To</th>
                                            <th class="numeric journal-padding-bootom">Instrument</th>
                                            <th class="numeric journal-padding-bootom">Instrument #</th>
                                            <th class="numeric journal-padding-bootom">Status</th>
                                                <th class="numeric journal-padding-bootom">Received&nbsp;For</th>
                                            <th class="numeric journal-padding-bootom">Tags</th>
                                            <th class="numeric journal-padding-bootom">Options</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td class="hidden-480">@item.SNo</td>
                                                    <td class="journal-padding-bootom">@item.Date.ToString("MM/dd/yyy")</td>
                                                    <td class="journal-padding-bootom">@string.Format("{0:C}", item.Amount)</td>
                                                <td class="numeric journal-padding-bootom">@item.PaidTo</td>
                                                <td class="numeric journal-padding-bootom"><a href="#" class="invoice-payment-color">@item.Instrument</a></td>
                                                <td class="numeric journal-padding-bootom">@item.InstrumentNum</td>
                                                <td class="numeric journal-padding-bootom">@if (@item.PaymentStatusId == 1)
                                                                                           {   <i class="icon-circle need-approval"></i>}
                                                                                           else if (@item.PaymentStatusId == 2)
                                                                                           {   <i class="icon-circle approved"></i>}
                                                                                           else if (@item.PaymentStatusId == 3)
                                                                                           {   <i class="icon-circle hold"></i>}
                                                                                           else if (@item.PaymentStatusId == 4)
                                                                                           {   <i class="icon-circle approved"></i>}
                                                    &nbsp;@item.Status</td>
                                                <td class="numeric journal-padding-bootom">@item.ReceivedFor</td>
                                                <td class="numeric journal-padding-bootom">@item.Tags</td>
                                                <td class="numeric journal-padding-bootom">
                                                    <div class="btn-group">
                                                        <button data-toggle="dropdown" class="btn dropdown-toggle padding-booton"><span class="caret"></span></button>
                                                        <ul class="dropdown-menu">
                                                            <li><a href="#">More Details</a></li>
                                                            <li><a href="#">Print</a></li>
                                                            <li><a href="~/Invoices/GetInvoicePaymentsByID/@item.PurchaseInvoicePaymentId.ToString()">Edit</a></li>
                                                            <li><a href="#">Mark as Need Approval</a></li>
                                                            <li><a href="#">Delete</a></li>
                                                        </ul>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>

                                <!--END TABS-->
                            </div>
                            <!--END TABS-->
                        </div>
                        </div>
                    </div>
                    <!-- END EXAMPLE TABLE PORTLET-->
                </div>
            </div>
            <!-- END PAGE CONTENT-->
        </div>

        <!-- END PAGE CONTAINER-->
    </div>

