@model StratusAccounting.Models.PurchaseInvoiceDetail

@{
    <tr>
        @using (Html.BeginCollectionItem("PurchaseInvoiceDetail"))
        { <td>
            <div class="control-group">
                <div class="controls no-left-margin">
                    @Html.DropDownListFor(model => model.ItemId, (SelectList)ViewBag.PurchaseProduct, "--Select--", new { @class = "m-wrap span12 border-form-radius" })
                </div>
            </div>
        </td>
            <td>
                <div class="control-group">
                    <div class="controls no-left-margin">
                        @Html.TextBoxFor(model => model.Description, new { @class = "span12 m-wrap mabottom1" })
                        @Html.ValidationMessageFor(model => model.Description)
                    </div>
                </div>
            </td>
            <td class="numeric">
                <div class="control-group">
                    <div class="controls">
                        @Html.TextBoxFor(model => model.Quantity, new { @class = "span12 m-wrap mabottom1", @onblur = "javascript:return addSubTotal(this);" })
                        @Html.ValidationMessageFor(model => model.Quantity)

                    </div>
                </div>
            </td>
            <td class="numeric">
                <div class="control-group">
                    <div class="controls">
                        @Html.TextBoxFor(model => model.Amount, new { @class = "span12 m-wrap mabottom1", @onblur = "javascript:return addSubTotal(this);" })
                        @Html.ValidationMessageFor(model => model.Amount)
                    </div>
                </div>
            </td>
            <td class="numeric">
                <div class="control-group">
                    <div class="controls">
                        @Html.TextBoxFor(model => model.Tax, new { @class = "span12 m-wrap mabottom1", @onblur = "javascript:return addSubTotal(this);" })
                        @Html.ValidationMessageFor(model => model.Tax)
                    </div>
                </div>
            </td>}
    </tr>
}


