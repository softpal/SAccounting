@model StratusAccounting.Models.CustomersAddress

@{
    <h3 class="form-section matop">@Model.AddressType</h3>
    <div id="123" class="row-fluid">
        <div class="span6">
            <div class="control-group">
                <div class="controls">
                    <label class="control-label">Office Email</label>
                    @Html.TextBoxFor(model => model.Email)
                </div>
            </div>
        </div>
        <div class="span6">
            <div class="control-group">
                <div class="controls">
                    <label class="control-label">Business Phone</label>
                    @Html.TextBoxFor(model => model.Phone)
                </div>
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span6">
            <div class="control-group">
                <div class="controls">
                    <label class="control-label">Business FAX</label>
                    @Html.TextBoxFor(model => model.Fax)
                </div>
            </div>
        </div>
        <div class="span6">
            <div class="control-group">
                <div class="controls">
                    <label class="control-label">Street</label>
                    @Html.TextBoxFor(model => model.AddressLine1)
                </div>
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span6">
            <div class="control-group">
                <div class="controls">
                    <label class="control-label">Country</label>
                    @Html.TextBoxFor(model => model.CountryId)
                </div>
            </div>
        </div>
        <div class="span6">
            <div class="control-group">
                <div class="controls">
                    <label class="control-label">City</label>
                    @Html.TextBoxFor(model => model.CityId)
                </div>
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span6">
            <div class="control-group">
                <div class="controls">
                    <label class="control-label">ZIP</label>
                    @Html.TextBoxFor(model => model.Zip)
                </div>
            </div>
        </div>
        <div class="span6">
            <div class="control-group">
                <div class="controls">
                    <label class="control-label">State</label>
                    @Html.TextBoxFor(model => model.StateId)
                </div>
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span6">
            <div class="control-group">
                <div class="controls">
                    <label class="control-label">Website</label>
                    @Html.TextBoxFor(model => model.UserCustomer.Website)
                </div>
            </div>
        </div>
    </div>
}